{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
