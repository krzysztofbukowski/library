{
  "name": "library",
  "version": "0.1.0",
  "description": "Project of digital library for primary school in Pieniezno.",
  "scripts": {
    "lint:client": "npm run --prefix ./front-end lint",
    "lint:server": "npm run --prefix ./back-end lint",
    "lint:fix:client": "npm run --prefix ./front-end lint:fix",
    "lint:fix:server": "npm run --prefix ./back-end lint:fix",
    "lint": "run-p lint:client lint:server",
    "lint:fix": "run-p lint:fix:client lint:fix:server",
    "start:client": "npm run --prefix ./front-end start",
    "start:server": "npm run --prefix ./back-end start",
    "start": "run-p start:server start:client",
    "test:client": "npm run --prefix ./front-end test",
    "test:server": "npm run --prefix ./back-end test",
    "test": "run-p test:client test:server",
    "postinstall": "npm --prefix ./front-end ci && npm --prefix ./back-end ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bukowski-se/library.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bukowski-se/library/issues"
  },
  "homepage": "https://github.com/bukowski-se/library#readme",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
